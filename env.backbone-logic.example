# Firebase Functions Environment Variables
# Copy this file to .env.backbone-logic and fill in actual values
# IMPORTANT: Never commit .env.backbone-logic with real values to git

# ============================================================================
# SENSITIVE VALUES - USE SECRET MANAGER IN PRODUCTION
# ============================================================================
# These should be configured in Google Cloud Secret Manager for production:
# - GEMINI_API_KEY (use: gcloud secrets create GEMINI_API_KEY)
# - GOOGLE_MAPS_API_KEY (use: gcloud secrets create GOOGLE_MAPS_API_KEY)
# - ENCRYPTION_KEY (use: gcloud secrets create ENCRYPTION_KEY)
# - INTEGRATIONS_ENCRYPTION_KEY (use: gcloud secrets create INTEGRATIONS_ENCRYPTION_KEY)
# - GOOGLE_OAUTH_CONFIG (use: gcloud secrets create GOOGLE_OAUTH_CONFIG --data-file=config.json)

# For local development only (use Secret Manager in production):
# GEMINI_API_KEY=your-gemini-api-key-here
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
# ENCRYPTION_KEY=your-32-character-encryption-key-here
# INTEGRATIONS_ENCRYPTION_KEY=your-32-character-encryption-key-here

# ============================================================================
# GOOGLE OAUTH CONFIGURATION
# ============================================================================
# For local development (use Secret Manager JSON secret in production)
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret
# GOOGLE_REDIRECT_URI=https://backbone-client.web.app/auth/google/callback

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=production
FIREBASE_PROJECT_ID=backbone-logic

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
JWT_SECRET=change-this-in-production-use-long-random-string
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
# EMAIL_USER=your-email@example.com
# EMAIL_PASS=your-email-password

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================
MAX_WEBSOCKET_CONNECTIONS=1000
CONNECTION_TIMEOUT_MS=300000
MESSAGE_BATCH_INTERVAL=50
MAX_BATCH_SIZE=100
ENABLE_MESSAGE_COMPRESSION=true

# ============================================================================
# WEATHER API CONFIGURATION
# ============================================================================
WEATHER_DEFAULT_LOCATION=Los Angeles, CA
WEATHER_CACHE_DURATION=1800000

# ============================================================================
# DEVELOPMENT FLAGS
# ============================================================================
DEBUG=false
VERBOSE_LOGGING=false

# ============================================================================
# APPLE CONNECT CONFIGURATION (Optional)
# ============================================================================
# APPLE_CONNECT_CLIENT_ID=your-apple-client-id
# APPLE_CONNECT_TEAM_ID=your-team-id
# APPLE_CONNECT_KEY_ID=your-key-id
# APPLE_CONNECT_PRIVATE_KEY=your-private-key
# APPLE_CONNECT_REDIRECT_URI=https://backbone-logic.web.app/dashboard/integrations
# APPLE_CONNECT_LDAP_URL=ldap://your-ldap-server:389
# APPLE_CONNECT_LDAP_BIND_DN=cn=admin,dc=example,dc=com
# APPLE_CONNECT_LDAP_BIND_PASSWORD=your-ldap-password
# APPLE_CONNECT_LDAP_BASE_DN=dc=example,dc=com
