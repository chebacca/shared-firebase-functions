{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "baseUrl": "..",
    "paths": {
      "@sentry/*": ["node_modules/@sentry/*"],
      "@opentelemetry/*": ["node_modules/@opentelemetry/*"],
      "@google-cloud/opentelemetry-cloud-trace-exporter": ["node_modules/@google-cloud/opentelemetry-cloud-trace-exporter"],
      "@google-cloud/opentelemetry-cloud-monitoring-exporter": ["node_modules/@google-cloud/opentelemetry-cloud-monitoring-exporter"],
      "langgraph": ["node_modules/langgraph"],
      "@langchain/*": ["node_modules/@langchain/*"],
      "*": [
        "node_modules/*",
        "shared-firebase-functions/node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/__tests__/**/*",
    "src/**/*.test.ts"
  ]
}