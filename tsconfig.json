{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "shared-backbone-intelligence": [
        "../shared-backbone-intelligence"
      ],
      "shared-backbone-intelligence/*": [
        "../shared-backbone-intelligence/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "google-drive-deploy",
    "**/*.test.ts"
  ]
}