{
  "name": "shared-firebase-functions",
  "version": "1.0.0",
  "description": "Shared Firebase Functions for BACKBONE v14.2 projects",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "deploy": "firebase deploy --only functions",
    "deploy:auth": "firebase deploy --only functions:loginUser,functions:registerUser,functions:verifyEmail,functions:resendVerificationEmail,functions:forgotPassword,functions:resetPassword,functions:checkEmailAvailability,functions:validateSession,functions:refreshUserClaims,functions:getAuthStatus",
    "deploy:projects": "firebase deploy --only functions:createProject,functions:listProjects,functions:updateProject,functions:deleteProject,functions:assignDatasetToProject,functions:removeDatasetFromProject,functions:getProjectDatasets",
    "deploy:datasets": "firebase deploy --only functions:createDataset,functions:listDatasets,functions:updateDataset,functions:deleteDataset",
    "deploy:sessions": "firebase deploy --only functions:createSession,functions:listSessions,functions:updateSession,functions:deleteSession",
    "deploy:licensing": "firebase deploy --only functions:createLicense,functions:listLicenses,functions:updateLicense,functions:deleteLicense",
    "deploy:payments": "firebase deploy --only functions:createPayment,functions:listPayments,functions:updatePayment",
    "deploy:database": "firebase deploy --only functions:createCollection,functions:createFirestoreIndexes,functions:updateSecurityRules,functions:listCollections",
    "deploy:system": "firebase deploy --only functions:healthCheck,functions:initializeDatabase,functions:migrateData,functions:cleanupData",
    "deploy:ai": "firebase deploy --only functions:processDeliverableDocumentEnhanced,functions:verifyDeliverableAccuracy,functions:generateWorkflowFromDeliverables",
    "deploy:team": "firebase deploy --only functions:teamMemberAuth,functions:getProjectTeamMembers,functions:getLicensedTeamMembers,functions:addTeamMemberToProject,functions:removeTeamMemberFromProject,functions:getAvailableProjectRoles",
    "deploy:debug": "firebase deploy --only functions:debugRoleConversion",
    "deploy:api": "firebase deploy --only functions:api",
    "deploy:callSheets": "firebase deploy --only functions:publishCallSheet,functions:publishCallSheetHttp,functions:disablePublishedCallSheet,functions:disablePublishedCallSheetHttp,functions:getPublishedCallSheet,functions:getPublishedCallSheetHttp,functions:authenticateTeamMember,functions:authenticateTeamMemberHttp,functions:getPublishedCallSheets,functions:getPublishedCallSheetsHttp,functions:cleanupExpiredCallSheets,functions:cleanupExpiredCallSheetsHttp",
    "deploy:timecards": "firebase deploy --only functions:getTimecardTemplates,functions:getTimecardTemplatesHttp,functions:createTimecardTemplate,functions:createTimecardTemplateHttp",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "predeploy": "npm run build",
    "git:status": "git status",
    "git:add": "git add .",
    "git:commit": "git commit -m",
    "git:push": "git push origin main",
    "git:log": "git log --oneline -10",
    "git:diff": "git diff --cached",
    "git:setup": "git config user.name 'BACKBONE Development Team' && git config user.email 'dev@backbone-logic.com'"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "@google/generative-ai": "^0.2.1",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "engines": {
    "node": "18"
  }
}